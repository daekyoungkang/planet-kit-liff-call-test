  "PlanetKit Hook": {
    "prefix": "pkithook",
    "body": [
      "import { useState, useEffect } from 'react';",
      "import { useVideoSDK } from '@/contexts/VideoSDKContext';",
      "import { useToast } from '@/hooks/use-toast';",
      "",
      "export const use${1:HookName} = () => {",
      "  const { planetKitConfig } = useVideoSDK();",
      "  const { toast } = useToast();",
      "  const [${2:state}, set${2/(.*)/${1:/capitalize}/}] = useState($3);",
      "",
      "  useEffect(() => {",
      "    $4",
      "  }, [planetKitConfig]);",
      "",
      "  return {",
      "    ${2:state},",
      "    set${2/(.*)/${1:/capitalize}/}",
      "  };",
      "};"
    ],
    "description": "Create a custom hook for PlanetKit functionality"
  },

  "API Function": {
    "prefix": "apifunc",
    "body": [
      "interface ${1:FunctionName}Request {",
      "  $2",
      "}",
      "",
      "interface ${1:FunctionName}Response {",
      "  $3",
      "}",
      "",
      "export const ${4:functionName} = async (data: ${1:FunctionName}Request): Promise<${1:FunctionName}Response> => {",
      "  try {",
      "    const response = await fetch('/api/${5:endpoint}', {",
      "      method: 'POST',",
      "      headers: {",
      "        'Content-Type': 'application/json',",
      "      },",
      "      body: JSON.stringify(data),",
      "    });",
      "",
      "    if (!response.ok) {",
      "      throw new Error(`HTTP error! status: \\${response.status}`);",
      "    }",
      "",
      "    return await response.json();",
      "  } catch (error) {",
      "    console.error('${4:functionName} error:', error);",
      "    throw error;",
      "  }",
      "};"
    ],
    "description": "Create a typed API function"
  }
}