      "",
      "  if (!isLoggedIn) {",
      "    return <div className=\"text-center p-4\">로그인이 필요합니다.</div>;",
      "  }",
      "",
      "  return (",
      "    <div className=\"$4\">",
      "      <h2>안녕하세요, {profile?.displayName}님!</h2>",
      "      $5",
      "    </div>",
